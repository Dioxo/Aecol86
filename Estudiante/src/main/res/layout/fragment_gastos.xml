<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Gastos.GastosFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_gravity="start"
            android:text="Recapitulativo de gastos"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <TableRow>

            <TextView android:text="Inscripción"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="left"/>

            <TextView android:text="242€"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="CVEC" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="91€" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Mutuelle*" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="5-34€/mes" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Residencia + garantía" />

            <TextView
                android:text="476€ o 690€"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Seguro habitación*" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="36€" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Timbre fiscal" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="60€" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Tarjeta SIM" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="10€" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Otros" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="150€" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Transporte*" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="1 = 1,70€ \nAño 199€"
                android:lines="2"/>

        </TableRow>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />


        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Total en ​ Chambre trois fonctions" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="1.146€" />

        </TableRow>


        <TableRow>

            <TextView
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Total en ​ Studio" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="1.361€" />

        </TableRow>


        <TextView
            android:layout_marginTop="20dp"
            android:text="*Gastos variables.
                        \n**Los valores son aproximativos y no vinculan a la asociación de ninguna manera."
            android:textSize="12dp"
            android:textStyle="bold"/>


    </TableLayout>


</LinearLayout>
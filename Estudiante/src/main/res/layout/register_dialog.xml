<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tenemos 2 tipos de registros disponibles para ti, selecciona el mejor segun te convenga"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVoyFrancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_margin="20dp"
            android:background="@drawable/btn_connecter"
            android:text="Voy a ir a Francia"/>

        <Button
            android:id="@+id/btnEstoyFrancia"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_connecter"
            android:backgroundTint="#f1f1f1"
            android:text="Ya estoy en Francia"/>


    </LinearLayout>

</LinearLayout>